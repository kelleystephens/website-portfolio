extends ../shared/template

block content
  body
  .container
    #splitlayout.splitlayout
      .intro
        .side.side-left
          header.codropsheader.clearfix
            h1 Kelley
          .intro-content
            .profile
              img(src='SplitLayout/img/front_end.jpg', alt='front_end')
            h1
              span Front End
              span Web Designer
          .overlay
        .side.side-right
          header.codropsheader.clearfix
            h1 Stephens
          .intro-content
            .profile
              img(src='SplitLayout/img/gears.png', alt='gears')
            h1
              span Back End
              span Web Engineer
          .overlay
      .page.page-right
        .page-inner
          section
            h2 Technologies Used
            p
              | - Javascript
            p
              | - Node / NPM
            p
              | - Express
            p
              | - MongoDB
            p
              | -TDD with Chai & Mocha
            p
              | - Ruby
            p
              | - Rails
            p
              | - Active Record
            p
              | - SQLite
            p
              | - TDD with RSpec & MiniTest
      .page.page-left
        .page-inner
          section
            h2 Technologies Used
            p
              | - Javascript
            p
              | - jQuery
            p
              | - AJAX
            p
              | - JSON
            p
              | - Grunt
            p
              | - HTML / Jade
            p
              | - CSS / Less
            p
              | - Twitter Bootstrap / Pure
            p
              | - Git Version Control
